<article class="meal">
    <h3>{{ description }}</h3>

    <img
        src="{{#if image_url }}{{ image_url }}{{ else }}http://www.placehold.it/350x150{{/if}}"
        alt="{{ description }}"
        style="max-height: 200px;">

    <div class="price">
        <button class="add"><i class="icon-plus-sign"></i></button>
        <output class="qty">{{ qty }}</output>
        <button class="remove"><i class="icon-minus-sign"></i></button>
    </div>
</article>